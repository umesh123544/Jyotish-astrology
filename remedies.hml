            nepaliDate: formData.nepaliDob,
            time: formData.tob,
            place: formData.pob,
            gender: formData.gender === 'male' ? 'पुरुष' : 'महिला'
          },
          currentHealth: formData.currentHealth || 'सामान्य',
          concerns: formData.healthConcerns || 'नभएको',
          planetaryPositions: [
            { planet: 'सूर्य', position: '1 औं भाव', influence: 'शारीरिक शक्ति र प्रतिरोधक क्षमता' },
            { planet: 'चन्द्रमा', position: '6 औं भाव', influence: 'मानसिक स्वास्थ्य र तनाव प्रवृत्ति' },
            { planet: 'मंगल', position: '8 औं भाव', influence: 'दुर्घटना र शल्यक्रिया सम्भावना' },
            { planet: 'बुध', position: '3 औं भाव', influence: 'स्नायु प्रणाली र फोक्सो सम्बन्धी स्वास्थ्य' },
            { planet: 'गुरु', position: '5 औं भाव', influence: 'पाचन प्रणाली र यकृत स्वास्थ्य' },
            { planet: 'शुक्र', position: '7 औं भाव', influence: 'मूत्र प्रणाली र हार्मोनल संतुलन' },
